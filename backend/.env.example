# Database (using SQLite for simplicity)
DATABASE_URL=sqlite+aiosqlite:///./agentmarket.db

# API Configuration
API_V1_PREFIX=/api

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Environment
ENVIRONMENT=development

# Blockchain (Base Sepolia)
